<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardBackgroundColor="#A6F2B8FF"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6F2B8FF"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="25dp"
            android:paddingVertical="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderVac"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweather_sans_bold"
                android:text="Vaccine"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="20sp"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/hosPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweather_sans_bold"
                android:textSize="20sp"
                android:text="Hospital: " />


            <TextView
                android:id="@+id/orderHosName"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:text="NUPUR HOSPITAL"
                android:singleLine="true"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#A6F2B8FF"
            android:layout_height="match_parent"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/datePrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Order date: " />

            <TextView
                android:id="@+id/orderHosDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginEnd="15dp"
                android:text="24-11-2003" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Brand: " />

            <TextView
                android:id="@+id/placedBrand"
                android:layout_width="90dp"
                android:singleLine="true"
                android:layout_height="wrap_content"

                android:text="VARIPED" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>